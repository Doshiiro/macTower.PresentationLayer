<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apple Ürünleri ve Teknik Servis</title>
    <meta name="description" content="@ViewData["Description"]">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/button.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    @RenderSection("Styles", required: false)
</head>
<body>
        <header>
            <div class="logo">
                <img src="https://www.macbookteknikservis.com/wp-content/uploads/2021/03/logo2-copy.png" alt="Apple Logo">
            </div>
            <nav class="mobile-design">
                <ul>
                    <li><a asp-action="Index">AnaSayfa</a></li>
                    <li>
                        <a href="https://mactowerbilisim.sahibinden.com/" target="_blank">Ürünler</a>
                    </li>
                    <li><a asp-action="Services">Tüm Hizmetler</a></li>
                    <li><a href="#">Destek</a></li>
                    <li><a asp-action="Contact">İletişim</a></li>
                </ul>
            </nav>

            <div class="ham-menu">
                <a href="javascript:void(0)" class="icon" onclick="hamMenuFunc()">
                    <i class="fa-solid fa-bars" style="color: #fa6400; font-size: 30px;"></i>
                </a>
            </div>
            <button class="button-5 btn-responsive" role="button"><i class="fa-solid fa-phone"></i> 0554 147 20 50</button>
        </header>
        <div class="ham-menu-Nav">
            <nav style="display: flex; flex-direction: column;">
                <ul class="ham-menu-list">
                    <li><a href="#">AnaSayfa</a></li>
                    <li><a href="#">Ürünler</a></li>
                    <li><a href="#">Tüm Hizmetler</a></li>
                    <li><a href="#">Destek</a></li>
                    <li><a href="#">İletişim</a></li>
                    <li>
                        <button class="button-5" role="button"><i class="fa-solid fa-phone"></i> 0554 147 20 50</button>
                    </li>
                </ul>
            </nav>
        </div>
   

    <div class="page-content">
        <div class="container">
            @RenderBody()
        </div>

        <footer style="padding-top: 2rem; background-color: #333333; color: white; text-align: center;">

            <img style="width: 100px;" src="https://www.macbookteknikservis.com/wp-content/uploads/2021/03/logo2-copy.png"
                 alt="Apple Logo">

            <div style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
                <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">

                    <div style="flex: 1; min-width: 200px; margin-bottom: 20px;">
                        <h3 style="font-size: 24px; margin-bottom: 20px;">Hakkımızda</h3>
                        <p style="font-size: 16px; line-height: 1.6;">
                            Biz, müşteri memnuniyetini ön planda tutan,
                            kaliteli
                            hizmet sunmayı amaçlayan bir ekibiz. Amacımız, size en iyi deneyimi sunmaktır.
                        </p>
                    </div>

                    <div style="flex: 1; min-width: 200px; margin-bottom: 20px;">
                        <h3 style="font-size: 24px; margin-bottom: 20px;">İletişim</h3>
                        <p style="font-size: 16px; line-height: 1.6;">
                            Adres:Perpa Ticaret Merkezi <br>
                            A Blok Kat:8 No:720 <br>
                            Şişli/İSTANBUL<br>
                            Telefon: 0542 556 90 52<br>
                            E-posta: info@macbookteknikservis.com
                        </p>
                    </div>

                    <div style="flex: 1; min-width: 200px; margin-bottom: 20px;">

                        <h3 style="font-size: 24px; margin-bottom: 20px;">Sosyal Medya</h3>
                        <div style="font-size: 24px;">
                            <a href="https://www.facebook.com"
                               style="color: white; margin-right: 15px; text-decoration: none;">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://www.twitter.com"
                               style="color: white; margin-right: 15px; text-decoration: none;">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://www.instagram.com" style="color: white; text-decoration: none;">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>

                    </div>

                </div>
                <div style="width:100%;height:300px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1504.1898709489042!2d28.969434538974866!3d41.06069126526068!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab739933e2f55%3A0xffd0deecb2a31c60!2sPERPA!5e0!3m2!1str!2str!4v1716021283990!5m2!1str!2str"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <hr style="border-top: 1px solid #7f8c8d; margin: 20px 0;">
                <p style="font-size: 14px; padding-bottom: 2rem;">&copy; 2024 Şirket Adı. Tüm hakları saklıdır.</p>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
